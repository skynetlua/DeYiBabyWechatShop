@import "/template/login/index.wxss";

page,view,image,input,textarea {
  display: block;
  box-sizing: border-box;
}
.container {
  background-color: #F2f2f2;
  min-height: 100%;
  padding-bottom: 100rpx;
}
.swiper-container{
  width: 100%;
  position: relative;  
}
.swiper_box {
  width: 100%;
  height:748rpx;
}
swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:748rpx;
}

.pop-goods-close{
  width: 36rpx;
  height: 36rpx;
}


.goods-info{
  background-color: #fff;
  padding: 20rpx 0;
  /*margin-bottom: 24rpx;*/
  width: 100%;
  position: relative;
}
.goods-info .goods-title{
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 32rpx;
  line-height: 1.4;
  color: #000;
  /*margin-bottom: 28rpx;*/
  min-width: 280px;
}


.goods-profile {
  display: flex;
  align-items:center;
}
.goods-profile .p{
   color:#e64340;
   font-size: 20pt;
   margin-left: 30rpx;
}
.goods-profile .p text{
   font-size: 12pt;
}
.goods-profile .r{
   color:#ccc;
   font-size: 10pt;
   margin-left: 30rpx;
}


.size-label-box {
  width: 100vw;
  background: #fff;
  margin-bottom: 30rpx;
}
.size-label-box2 {
  width: 100vw;
  background: #fff;
}
.size-label-box  .label{
  font-size:26rpx;
  color:#000;
  padding-left: 30rpx;
  padding: 0rpx 0 0rpx 30rpx;
}
.label-item-box{
  display: flex;
  margin-left: 30rpx;
  flex-direction: row;
  flex-wrap:wrap;
}
.label-item{
  font-size:26rpx;
  color:#000;
  padding: 14rpx 20rpx;
  border: 1px solid #ddd;
  border-radius: 6rpx;
  margin: 0 20rpx 20rpx 0;
  color: #e64340;
  border: 1px solid #e64340;
}
.size-label-box .label-item.active{
  color: #e64340;
  border: 1px solid #e64340;
}

.buy-num-box{
   display: flex;
   justify-content: space-between;
   padding: 10rpx 30rpx 10rpx 0;
   margin-left: 30rpx; 
   border-top: 1px solid #eee;
   margin-top: 5rpx;
   align-items: center;
}
.num-label{
  font-size:26rpx;
  color:#000000;
}
.buy-num-box .num-box{
     display: flex;
}
.buy-num-box .num-box .num-jian,
.buy-num-box .num-box .num-input,
.buy-num-box .num-box .num-jia{
  width: 80rpx;
  height: 64rpx;
  line-height: 62rpx;
  text-align: center;
  border: 1px solid #e64340;
}
.buy-num-box .num-box .num-input{
  font-size: 28rpx;
  width: 100px;
}
.buy-num-box .num-box .num-input input{
  height: 100%;
}
.btn{
    width: 166rpx;
    height: 60rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 60rpx;
    border: 1rpx solid #ccc;
    border-radius: 6rpx;
    margin-left: 20rpx;
    font-size:26rpx;
}

.goods-des-info{
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
}
.label-title{
  font-size:28rpx;
  color:#000000;
  padding: 30rpx;
}
.goods-text{
  padding: 0 10rpx;
  font-size:28rpx;
  color:#666666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
}
.goods-text image{
  width: 100%;
}

.footer-box{
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  bottom: 0;
  left: 0;
  display: flex;
  box-shadow:0 0 1rpx 0 ;
  align-items: center;
}
.footer-box .now-buy{
  text-align: center;
  height: 100%;
  width: 250rpx;
  line-height: 100rpx;
  background-color: #e64340;
  color:#fff;
  font-size: 34rpx;
  flex: 1;
}

.pic {
  float: left;
  width: 140rpx;
  height: 140rpx;
  margin-right: 20rpx;
  border-radius: 6rpx;
  display: flex;
  flex-direction: column;
}

.red-border {
  color: #aaa;
  border: 1px solid #e64340;
}

.new-sku {
  padding-left: 6rpx;
  margin-left:30rpx;
  margin-top: 10rpx; 
  color: #aaa;
  border: 1rpx solid #e64340;
  display: inline-block;
}
