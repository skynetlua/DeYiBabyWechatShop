page,
.page,
.page__bd{
    height: 100%;
    padding-bottom: 0;
    background: #F4F5F9;
}
.item{
	width: 100%;
	height: 70px;
	margin: 0;
}
.item-icon{
	width: 50px;
	height: 50px;
	margin: 0px;
	display: inline-block;
}
.item-content{
	margin-left: 5px;
	margin-top: 0;

	display: inline-block;
}
.item-top{
}
.item-bottom{
	width: 100%;
	display: flex;
}
.btn{
    width: 166rpx;
    height: 50rpx;
    box-sizing: border-box;
    text-align: center;
    line-height: 50rpx;
	border:1rpx solid #e64340;
    color: #e64340;
    border-radius: 6rpx;
    display: inline-block;
	margin-left: 10px;
    font-size:26rpx;
}
